{
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "target": "ES6",
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "~shared/*": [
        "shared/*"
      ],
      "~entities/*": [
        "entities/*"
      ],
      "~features/*": [
        "features/*"
      ],
      "~widgets/*": [
        "widgets/*"
      ],
      "~pages/*": [
        "pages/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}